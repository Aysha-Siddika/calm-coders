<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back2"
    tools:context="com.example.harini.intrepido.Signin">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uname"
        android:hint="User Name"
        android:textColorHint="#000"
        android:textColor="#ffff"
        android:textSize="24dp"
        android:layout_above="@+id/pwd"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/Login" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="21dp"
        android:id="@+id/Login"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:layout_gravity="bottom" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="#000"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwd"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/uname" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/key"
        android:layout_alignTop="@+id/uname"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/uname"
        android:layout_alignBottom="@+id/pwd" />

</RelativeLayout>



