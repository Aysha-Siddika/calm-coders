<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back2"
    tools:context="com.example.siddiqsami.intrepido.Signup">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FN"
        android:hint="Full Name"
        android:textColorHint="#000"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="User Name"
        android:textSize="20dp"
        android:id="@+id/UN"
        android:textColorHint="#000"
        android:layout_below="@+id/FN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/FN" />

    <EditText
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwd"
        android:textColorHint="#000"

        android:layout_below="@+id/UN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/UN" />

    <EditText
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:ems="10"
        android:id="@+id/cpwd"
        android:textColorHint="#000"
        android:layout_below="@+id/pwd"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/pwd" />

    <EditText
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:hint="Emergency No1:"
        android:inputType="phone"
        android:id="@+id/EM1"
        android:textColorHint="#000"
        android:layout_below="@+id/cpwd"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/cpwd" />

    <EditText
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No2:"
        android:inputType="phone"
        android:id="@+id/EM2"
        android:textColorHint="#000"
        android:layout_below="@+id/EM1"
        android:layout_alignStart="@+id/EM3" />

    <EditText
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="No3:"
        android:inputType="phone"
        android:id="@+id/EM3"
        android:textColorHint="#000"
        android:layout_below="@+id/EM2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="96dp"
        android:layout_alignParentEnd="true" />
    <EditText
        android:textSize="20dp"
        android:textColorHint="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="No4:"
        android:ems="10"
        android:id="@+id/EM4"
        android:layout_below="@+id/EM3"
        android:layout_alignStart="@+id/EM3" />


    <Button
        android:textSize="20dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="SUBMIT"
        android:background="@drawable/shape"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:textSize="20dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="CANCEL"
        android:id="@+id/cancel"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/EM4" />



</RelativeLayout>
